<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ACCOUNT TAX GROUP -->
    <record id="tax_group_vat" model="account.tax.group">
        <field name="name">VAT</field>
        <field name="sequence">0</field>
    </record>
    <record id="sale_tax_igv_18" model="account.tax.template">
        <field name="chart_template_id" ref="pe_chart_template"/>
        <field name="name">18%</field>
        <field name="description">IGV</field>
        <field name="amount">18.0</field>
        <field name="type_tax_use">sale</field>
        <field name="sequence">0</field>
        <field name="tax_group_id" ref="tax_group_vat"/>
        <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),

            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('chart401111'),
            }),

        ]"/>
        <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),

            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('chart401111'),
            }),
        ]"/>
    </record>
    <record id="sale_tax_igv_18_included" model="account.tax.template">
        <field name="chart_template_id" ref="pe_chart_template"/>
        <field name="name">18% (Included in price)</field>
        <field name="description">IGV</field>
        <field name="amount">18.0</field>
        <field name="type_tax_use">sale</field>
        <field name="sequence">1</field>
        <field name="price_include">1</field>
        <field name="tax_group_id" ref="tax_group_vat"/>
        <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),

            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('chart401111'),
            }),

        ]"/>
        <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'base',
            }),

            (0,0, {
                'factor_percent': 100,
                'repartition_type': 'tax',
                'account_id': ref('chart401111'),
            }),
        ]"/>
    </record>
</odoo>
