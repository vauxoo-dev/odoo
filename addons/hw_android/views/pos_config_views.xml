<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_iot_config_view_form" model="ir.ui.view">
        <field name="name">pos.iot.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_iot.pos_iot_config_view_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='row_scale']" position="after">
                <div class="row" name="row_android">
                    <label string="Android Device" for="iface_android_id" class="col-lg-4 o_light_label"/>
                    <field name="iface_android_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
